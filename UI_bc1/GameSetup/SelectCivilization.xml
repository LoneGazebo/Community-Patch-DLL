				<Button Anchor="C,C" Size="64,64" NoStateChange="1" ID="Portrait"/>
			</Image>
		</Container>
	</Instance>


	<!--=====================-->
	<!-- Select Civilization -->
	<!--=====================-->

	<Grid Size="960,658" Anchor="C,C" Offset="0,36" Padding="0,0" Style="Grid9DetailFive140" >


		<ScrollPanel Anchor="L,T" Offset="20,45" Size="902,512" Vertical="1" ID="CivPanel" >
