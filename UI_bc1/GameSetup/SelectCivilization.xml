			</Stack>

			<Image Anchor="C,B" Offset="0,0" Texture="bar900x2.dds" Size="900.1" />
		</Button>
	</Instance>

	<Instance Name="IconInstance" >
		<Container Anchor="L,T" Size="56.56" >
