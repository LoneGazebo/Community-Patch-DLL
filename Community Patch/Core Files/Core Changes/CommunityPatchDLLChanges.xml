<GameData>
	<CustomModOptions>
		<!-- This is the "all off" option -->
		<Update>
			<Where Name="COMMUNITY_PATCH"/>
			<Set Value="1"/>
		</Update>
		<!-- This affects the base elements of the patch. -->
		<Update>
			<Where Name="MOD_BALANCE_CORE"/>
			<Set Value="1"/>
		</Update>
		<!-- This affects all yield-related changes.-->
		<Update>
			<Where Name="MOD_BALANCE_CORE_YIELDS"/>
			<Set Value="1"/>
		</Update>
		<!-- This affects spies scaling with game size.-->
		<Update>
			<Where Name="MOD_BALANCE_CORE_SPIES"/>
			<Set Value="1"/>
		</Update>
		<!-- This affects AI Tactical and Military Performance-->
		<Update>
			<Where Name="MOD_BALANCE_CORE_MILITARY"/>
			<Set Value="1"/>
		</Update>
		<!-- This affects AI settler site location selection and advanced settler functions -->
		<Update>
			<Where Name="MOD_BALANCE_CORE_SETTLER"/>
			<Set Value="1"/>
		</Update>
		<!-- This affects the Deal AI -->
		<Update>
			<Where Name="MOD_BALANCE_CORE_DEALS"/>
			<Set Value="1"/>
		</Update>
	</CustomModOptions>
  </GameData>